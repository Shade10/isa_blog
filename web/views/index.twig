{% extends "layout.html" %}

{% block content %}
    <div class="jumbotron text-center">
        <div class="container">
            <h1>Blog ISA</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3><span class="glyphicon glyphicon-info-sign"></span> Recent posts</h3>
                <ul>
                    {% for item in recent %}
                        <a href="/posts/{{item.id}}"><li>{{ item.title }} </li></a>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-6">
                <h3><span class="glyphicon glyphicon-link"></span> Top Stories!</h3>
                <ul>
                    {% for item in trending %}
                    <a href="/posts/{{ item.id }}"> <li>{{ item.title }} {{ item.visited }} </li></a>
                    {% endfor %}
                </ul>
            </div>
        </div> <!-- row -->
    </div>

{% endblock %}
